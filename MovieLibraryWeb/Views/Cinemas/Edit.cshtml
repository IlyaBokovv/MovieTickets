@using MovieLibrary.Models.Models;
@model Cinema

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2">
        <form enctype="multipart/form-data" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="form-group text-center my-2">
                <img class="rounded-circle" id="ProfilePicturePreview" src="~/@Model.Image.ImagePath"
                     style="width: 200px; height:200px; object-fit:cover;" id="ProfilePicturePreview" />
            </div>
            <div class="form-group my-2">
                <label asp-for="Image.ImageFile" class="form-label">Director's image</label>
                <input asp-for="Image.ImageFile" id="imgInp" accept="image/*" class="form-control" />
                <span asp-validation-for="Image.ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Name" class="control-label">Full Name</label>
                <input asp-for="Name" value=@Model.Name class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" value=@Model.Description class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input value="Save" type="submit" class="btn btn-outline-success float-end" />
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        imgInp.onchange = evt => {
            const [file] = imgInp.files
            if (file) {
                ProfilePicturePreview.src = URL.createObjectURL(file)
            }
        }
    </script>
}
