@using MovieLibrary.Models.ViewModels;
@model LoginVM
@{
    ViewData["Title"] = "Login";
}
<div class="text-center form-signin mt-5">
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span class=""><b> @TempData["Error"] </b></span>
        </div>
    }
    <form asp-action="Login" class="col-md-4 offset-md-4 col-sm-8 offset-sm-2">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <div class="form-floating">
            <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
            <label asp-for="Email">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating my-2">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

    </form>
</div>