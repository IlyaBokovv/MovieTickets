@using MovieLibrary.Models.ViewModels;
@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
<div class="text-center form-signin mt-5">
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span class=""><b> @TempData["Error"] </b></span>
        </div>
    }
    <form method="post" asp-action="Register" class="col-md-6 offset-md-3 col-sm-10 offset-sm-1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1 class="h3 mb-3 fw-normal">Please fill the following fields</h1>
        <div class="row g-2 my-0">
            <div class="col form-floating">
                <input asp-for="FirstName" type="text" class="form-control" placeholder="FirstName">
                <label asp-for="FirstName">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col form-floating">
                <input asp-for="LastName" type="text" class="form-control" placeholder="LastName">
                <label asp-for="LastName">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row g-2 my-0">
            <div class="col-md form-floating">
                <input asp-for="UserName" type="text" class="form-control" placeholder="UserName">
                <label asp-for="UserName">User name</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-md form-floating">
                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="">
                <label asp-for="PhoneNumber">Phone Number</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-0 g-2">
            <div class="col-md form-floating">
                <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md form-floating">
                <input asp-for="Country" type="text" class="form-control" placeholder="Country">
                <label asp-for="Country">Country</label>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-0 g-2">
            <div class="col form-floating">
                <input asp-for="State" type="text" class="form-control" placeholder="State">
                <label asp-for="State">State</label>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="col form-floating">
                <input asp-for="City" type="text" class="form-control" placeholder="City">
                <label asp-for="City">City</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-0 g-2">
            <div class="col form-floating">
                <input asp-for="Street" type="text" class="form-control" placeholder="Street Name">
                <label asp-for="Street">Street</label>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="col form-floating">
                <input asp-for="ZipCode" type="number" class="form-control" placeholder="ZipCode">
                <label asp-for="ZipCode">Zip Code</label>
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-0 g-2">
            <div class="col-md form-floating">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-md form-floating">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Password">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <button class="w-100 btn btn-lg btn-primary mt-4" type="submit">Register</button>

    </form>
</div>