@using MovieLibrary.Models.Models;
@model Movie
@{
    ViewData["Title"] = "Delete movie";
}

<div class="form-group text-center">
    <h2>
        Are you sure you want to delete the following movie?
    </h2>
</div>
<div class="container">
    <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2">
        <div class="form-group text-center my-2">
            <img class="rounded-circle image-default-size" src="~/@Model.Image.ImagePath" />
        </div>
        <h1 class="text-center">@Model.Name</h1>
        <div class="form-group my-2">
            <h4>Description</h4>
            <p>
                @Model.Description
            </p>
        </div>
        <div class="form-group my-2">
            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
