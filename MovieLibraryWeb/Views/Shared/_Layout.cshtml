@using MovieLibrary.Models.Static;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie Tickets</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/movies.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieLibraryWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3 mb-4">
            <div class="container-fluid ms-3">
                <a class="navbar-brand" asp-controller="Movies" asp-action="Index">Movie Tickets</a>
                <div class="offcanvas offcanvas-end text-bg-dark bg-dark" tabindex="-1" id="offcanvasNavbar2" aria-labelledby="offcanvasNavbar2Label">
                    <div class="offcanvas-body ">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            @if (User.IsInRole(UserRolesValues.Admin))
                            {
                                <li class="nav-item dropdown me-2">
                                    <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Управление
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Cinemas" asp-action="Index">Кинотеатр</a></li>
                                        <li><a class="dropdown-item" asp-controller="Actors" asp-action="Index">Актеры</a></li>
                                        <li><a class="dropdown-item" asp-controller="Directors" asp-action="Index">Режиссеры</a></li>
                                        <li><a class="dropdown-item" asp-controller="Orders" asp-action="ListAll">Заказы</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Пользователи</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                        <form class="d-flex mt-lg-0 me-3" role="search" asp-controller="Movies" asp-action="Filter">
                            <input name="searchString" type="search" class="form-control me-2" placeholder="Поиск..." style="width: 300px;" />
                            <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                        <partial name="_Identity" />

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Movie Tickets
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
